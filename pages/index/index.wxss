/* pages/index/index.wxss */
.page-index{
  width: 100vw;
  height: 100vh;
  background-color: #1A1CD8;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.app-logo{
  width: 300rpx;
  height: 300rpx;
  background-color: #ffffff;
  margin-top: 50rpx;
  background: url("https://alanngaijx.xyz/assets/app-decals/Decals-logo.png") no-repeat center;
  background-size: 500rpx 500rpx;
}

.create-pannel{
  width: 600rpx;
  height: 300rpx;
  background-color: rgba(255,255,255,.2);
  border-radius: 8rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 50rpx;
}

.create-pannel .create-item{
  width: 150rpx;
  height: 210rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  color: #ffffff;
}

.create-pannel .create-item .icon-wrap{
  width: 150rpx;
  height: 150rpx;
  border-radius: 150rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.create-pannel .create-item .icon-wrap::before{
  content:"";
  display: block;
  width: 80rpx;
  height: 80rpx;
  background-size: contain;
}

.camera-icon::before{
  background: url("https://alanngaijx.xyz/assets/app-decals/camera.png") no-repeat center;
}

.album-icon::before{
  background: url("https://alanngaijx.xyz/assets/app-decals/photo.png") no-repeat center;
}

.canvas-icon::before{
  background: url("https://alanngaijx.xyz/assets/app-decals/canvas.png") no-repeat center;
}